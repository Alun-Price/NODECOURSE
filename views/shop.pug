extends layouts/main-layout.pug

block content
    main
        if prods.length > 0 
            .grid 
                each product in prods
                    article.card.product-item 
                        header.card__header 
                            h1.product__title #{product.title}    
                        .card__image 
                            img(src='https://images.unsplash.com/photo-1592496431122-2349e0fbc666?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8Ym9vayUyMGNvdmVyfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=800&q=60' alt="a book")
                        .card__content 
                            h2.product__price $19.99
                            p.product_description A very interesting book
                        .card__actions 
                            button.btn Add to cart
        else
            h1 No Products

